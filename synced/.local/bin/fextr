#!/bin/bash

i="$1"
nf="$2"
fs="$3"

if [[ ! "$i" ]]; then
    echo "provide i"
    exit 1
fi
if [[ ! "$nf" ]]; then
    echo "provide nf"
    exit 1
fi

if [[ ! "$fs" ]]; then
    fs=" "
fi

awk -F "$fs" "
    {
        var = \"\"
        for (i = $i; i <= NF - $nf; i++) {
            var = var FS \$i
        }
        print var
    }
" | cut -c 2-
